
{{#if user}}
    <div>
        <h1>Hola {{user.name}}</h1>
     
    </div>
{{/if}}

<h2>PRODUCTOS</h2>


    {{#each producth }}
   
        <ul>
            <li>
                id: {{this.this._id}}
            </li>
            <li>
                title: {{this.title}}
            </li>
            <li>
                description: {{this.description}}
            </li>
            <li>
                price: ${{this.price}}
            </li>
            <li>
                category: {{this.category}}
            </li>
            <li>
                status: {{this.status}}
            </li>
            <li>
                code: {{this.code}}
            </li>
            <li>
                stock: {{this.stock}}
            </li>
            <li>
                thumbnail: {{this.thumbnail}}
            </li>
        </ul>

<button id="addProductButton" type="submit" class="btn addButtonStyle m-3" data-id="{{this._id}}">Agregar al carrito</button>

    </div>
    {{/each}}
    {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}"><button>Anterior</button></a>
    {{/if}}
    <p>page: {{page}}</p>
    {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}"><button>Siguiente</button></a>
    {{/if}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/detailProduct.js" type="module"></script>

